<section class="lede main">
	<h1>Posts</h1>
	<p>Regrettable phrasing.</p>
</section>
{{#each posts}}
<section class="post">
	<section class="grid-container {{postType}}">
		<article class="main writing">
			<h2><a href="/posts/{{slug}}">{{summary}}</a></h2>
			<time datetime="{{roboDate published}}">{{scriptDate createdAt}}</time>
			{{marked content}}
		</article>
	</section>
</section>
{{/each}}
