{
  "rules": {
    "indent": [ "error", 2 ],
    "quotes": [ 2, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "no-console": 0,
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "plugins": [ "html" ],
  "settings": {
    "html/indent": "+2",
    "html/report-bad-indent": 1
  }
}
