{{#extend "layout"}}
	{{#content "body"}}
		<div class="container {{type}}">
			<div id="lede" class="main">			
				<h1>{{title}}</h1>
				<p>{{niceDate published}}</p>
			</div>
			<article class="main writing">
				{{marked content}}
				<a href="/posts" id="back"><small>Back to posts</small></a>
			</article>
		</div>
	{{/content}}
{{/extend}}